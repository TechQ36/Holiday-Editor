{
  "name": "holiday-editor",
  "version": "1.0.0",
  "description": "基于 Electron 的 Markdown 转译工具",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start:electron": "nodemon --watch ./src/main/* --exec 'npm run build && electron ./dist/main.js'",
    "start:react": "cd ./src/render && npm run start"
  },
  "repository": "https://github.com/wjq990112/Markdown-Parser",
  "keywords": [],
  "author": "wjq990112",
  "license": "MIT",
  "devDependencies": {
    "cz-conventional-changelog": "^3.2.0",
    "electron": "^9.0.4",
    "electron-is-dev": "^1.2.0",
    "nodemon": "^2.0.4",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
